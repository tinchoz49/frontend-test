{
  "name": "ingsw-frontend-test",
  "version": "1.0.0",
  "description": "A backend app that has events and their description to be used as a backend server for the technical interview at Ingenious Softworks",
  "main": "app/index.js",
  "scripts": {
    "test": "node test",
    "posttest": "eslint app/**/*.js",
    "start": "node app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ingsw-dev/frontend-test"
  },
  "author": "Gabriel Chertok <gchertok@ingsw.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ingsw/frontend-test/issues"
  },
  "homepage": "https://github.com/ingsw/frontend-test#readme",
  "dependencies": {
    "body-parser": "^1.13.2",
    "cors": "^2.8.3",
    "express": "^4.13.1",
    "express-jsonschema": "^1.1.6",
    "pify": "^2.3.0",
    "pino": "^4.5.1"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "supertest": "^1.0.1",
    "tape": "^4.0.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "indent": ["error", 2],
      "no-var": 2,
      "prefer-const": 2,
      "semi": 2,
      "quotes": [2, "single"]
    }
